<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_6ssp"
    android:layout_marginLeft="@dimen/_10ssp"
    android:layout_marginRight="@dimen/_10ssp"
    android:layout_marginTop="@dimen/_10ssp"
    android:elevation="@dimen/_6ssp"
    app:cardUseCompatPadding="true"
    android:id="@+id/cardview_item"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardBackgroundTest"
    android:padding="@dimen/_15ssp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/userImage"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15ssp"
            android:background="@drawable/icon_ripple"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"
            android:src="@drawable/ic_edit_black_24dp"
            android:stateListAnimator="@animator/button_elevation_animator"
            app:tint="@color/main_screen_text_color" />

        <View
            android:layout_width="@dimen/_30ssp"
            android:layout_height="1dp"
            android:background="@color/buttonColor"
            android:layout_marginLeft="@dimen/_5ssp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15ssp"
            android:src="@drawable/ic_delete_black_24dp"
            app:tint="@color/muted_red"
            android:id="@+id/delete_user"
            android:background="@drawable/icon_ripple"
            android:clickable="true"
            android:focusable="true"
            android:elevation="2dp"
            android:stateListAnimator="@animator/button_elevation_animator"
            />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="80dp"
        android:background="@color/buttonColor"
        android:layout_toRightOf="@+id/userImage"
        android:layout_marginLeft="@dimen/_5ssp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutUsername"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_toRightOf="@+id/userImage">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username : "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/teal_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName_item"
            android:text="Username"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/white"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutPassword"
        android:layout_below="@+id/layoutUsername"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_toRightOf="@+id/userImage">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/teal_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_item"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:text="Password"
            android:layout_marginLeft="@dimen/_10ssp"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       android:id="@+id/layoutCreateDate"
        android:layout_below="@+id/layoutPassword"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_toRightOf="@+id/userImage">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Date : "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/teal_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_date"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:text="Date"
            android:layout_marginLeft="@dimen/_10ssp"


            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_below="@+id/layoutCreateDate"
        android:layout_marginLeft="@dimen/_10ssp"
        android:layout_toRightOf="@+id/userImage">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role : "
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/teal_700"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_role"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:text="Role"
            android:layout_marginLeft="@dimen/_10ssp"


            />
    </LinearLayout>



</RelativeLayout>
</androidx.cardview.widget.CardView>